<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TranslateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/textsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:orientation="vertical">


            <Spinner android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_height="wrap_content"/>

            <Spinner android:id="@+id/spinner2"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_height="wrap_content"/>


            <EditText
                android:layout_marginBottom="20dp"
                android:id="@+id/input"
                android:background="@drawable/btn_border"
                android:padding="20dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/enter_here"
                android:textAlignment="center"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kamayo"/>

            <TextView
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_border"
                android:padding="20dp"
                android:textColor="#000000"
                android:id="@+id/kamayoResult"
                android:hint="@string/result_in_kamayo"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_translate_black_24dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sinugbanon"/>

            <TextView
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_border"
                android:padding="20dp"
                android:textColor="#000000"
                android:id="@+id/sinugbanonResult"
                android:hint="@string/result_in_sinugbanon"
                android:drawableLeft="@drawable/ic_translate_black_24dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textsLayout"
            >

            <Button
                android:id="@+id/btnTranslate"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_rounded_5"
                android:layout_marginRight="20dp"
                android:textColor="#ffffff"
                android:text="@string/btn_translate"/>


            <Button
                android:id="@+id/btnReset"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_rounded_5"
                android:textColor="#ffffff"
                android:text="@string/reset" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>